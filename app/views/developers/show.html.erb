<br><br><br>
<div class="text-center">

  <h2><%= flash[:notice] %></h2>
  <div class"dev-profile"="class"dev-profile"">
    <h1><%= @developer.name %></h1>
    <br>
    <% if @developer.image_link %>
      <%= image_tag @developer.image_link, {class: "avatar"}%>
    <% end %>
    <br>
    <h2><%= @developer.title %></h2>

    <br>
    <p>Average Rating:
      <% if @developer.reviews.empty? %>
        No Reviews
      <% else %>
        <%= @developer.average_rating %>/5</p>
    <% end %>
    <br>

    <p>Career Earnings: $<%= @developer.amt_earned %>.00</p>
    <br>
    <p class="margin"><%= @developer.description %></p><br>
    <p>Location:
      <%= @developer.location %></p><br>

    <% if !@developer.projects.empty? %>
      <h5>Projects
      </h5><br>
      <% @developer.projects.each do |project| %>
        <p><%= link_to project.title, project, class: "customize-text" %></p>
      <% end %>
    <% end %>

    <% if current_developer && session[:developer_id] == current_developer.id %>
      <%= button_to "Edit Developer", edit_developer_path(@developer), {method: :get, class: "btn btn-info col-3"} %>
    <% end %>
    <br><br><br>

  </div>
